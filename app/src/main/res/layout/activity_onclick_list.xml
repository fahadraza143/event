<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5EA9C0CF"

    android:padding="16dp"
    tools:context=".onclickList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/ani"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        android:layout_marginTop="10dp"/>
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Guest"
        android:textSize="24sp"
        android:layout_marginTop="10dp"/>
        />

        <TextView
            android:id="@+id/tv_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Select"
            android:textColor="#1A9B21"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/sp_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Venue"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>
        />

        <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Select Date"
        android:inputType="date"
            android:layout_marginTop="10dp"/>

        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Time"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_time"
        android:drawablePadding="16dp"
        android:layout_marginTop="10dp"/>

        android:background="@android:drawable/editbox_background"/>
        <TextView
            android:id="@+id/tv_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARE YOU ATTENDING?"
            android:textStyle="bold"
            android:textColor="#CE2B1D"
            android:layout_marginTop="10dp"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/sp_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#80137492"
            android:text="Booking"
            android:layout_marginTop="17dp"
        android:textColor="#0D6B5C"
        android:textColorHighlight="#E11D5550"
        android:textColorHint="#FC13D185"
        android:textSize="25sp"
        android:textStyle="bold"
            android:onClick="Booking"/>


    </LinearLayout>


</ScrollView>